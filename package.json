{
  "name": "hola",
  "version": "1.0.0",
  "type": "module",
  "description": "Emotion based Deepmoji Desktop Partner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "mac": {
      "entitlements": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to record video.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio."
      }
    }
  },
  "author": "Shamila Sallay",
  "license": "ISC",
  "devDependencies": {
    "chat-bubble": "^1.4.0",
    "electron": "^8.2.5",
    "electron-builder": "^22.8.0"
  },
  "dependencies": {
    "ibm-watson": "^5.6.2",
    "jquery": "^3.5.0",
    "microphone-stream": "^5.0.1",
    "webcamjs": "^1.0.22"
  }
}
